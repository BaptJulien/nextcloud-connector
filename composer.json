{
    "name": "watcha/nextcloud-connector",
    "description": "This connector allows the integration of the document sharing, calendars and tasks features of Nextcloud in [Watcha](https://watcha.fr). It is thus possible to link the resources of these applications to Watcha rooms thanks to Nextcloud groups.",
    "type": "project",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Charlie Calendre",
            "email": "c-cal@watcha.fr"
        }
    ],
    "require": {},
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "nextcloud/coding-standard": "^0.5.0"
    },
    "config": {
        "optimize-autoloader": true,
        "classmap-authoritative": true,
        "platform": {
            "php": "7.2"
        }
    },
    "scripts": {
        "lint": "find . -name \\*.php -not -path './vendor/*' -not -path './build/*' -print0 | xargs -0 -n1 php -l",
        "cs:check": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix"
    }
}
